<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>botones epicos</title>
    <script src="/static/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="/static/css/styles.css">
  </head>
  <body class="fondoBoton">
    <div class="container">
      <div class="row">
        <div class="col-md-8 offset-md-2 mt-5 mb-5">
          <h1 class="mb-5 titulo">The button has been pushed <span id="printNum">0</span> times(s)</h1>
          <h4 class="mb-4 center titulo">Push the button to update the count!</h4>
          <div class="center mb-5">
            <button id="up">push the epic button</button> 
          </div></br></br></br></br>
          <div>
            <a class="reset" href="/">back to menu</a>
            <button class="float-end reset">reset count</button> 
          </div>
        </div>
      </div>
    </div>
    <script type ="text/javascript" src="/socket.io/socket.io.js"></script>
    <script type ="text/javascript">
      const socket = io('http://localhost:8000');
      $(document).ready(function (){
        $('#up').on('click', function() {
          socket.emit('up', {suma: 'suma +1'});
        }); 
        $('#reset').on('click', function() {
          socket.emit('reset', {reset: 'dejalo en 0'});
        });     
      
      });
      socket.on('num', function(data) {
      $('#printNum').html(data.num);
    });
    </script>
  </body>
</html>
